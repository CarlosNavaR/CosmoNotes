<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_pendiente"
    android:orientation="horizontal"  >

    <LinearLayout
        android:id="@+id/TagColorLY"
        android:layout_width="7dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@drawable/radioeventcell"
        android:layout_marginEnd="10dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/noteCellTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center_vertical"
                android:text="Notas"
                android:textColor="@color/MoradoText"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TimeCell"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/source_sans_pro_light"
                android:gravity="center"
                android:text="time"
                android:textColor="@color/MoradoText"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/noteContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_light"
            android:gravity="center_vertical"
            android:text="sdasdas"
            android:textColor="@color/MoradoText"
            android:textSize="18sp"
            android:maxLines="2"/>
    </LinearLayout>


</LinearLayout>